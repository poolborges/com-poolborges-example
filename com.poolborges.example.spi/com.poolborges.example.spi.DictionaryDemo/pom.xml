<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.poolborges.example</groupId>
        <artifactId>com.poolborges.example.spi</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <groupId>com.poolborges.example</groupId>
    <artifactId>com.poolborges.example.spi.DictionaryDemo</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>com.poolborges.example.spi.DictionaryDemo</name>
    <url>http://maven.apache.org</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.poolborges.example</groupId>
            <artifactId>com.poolborges.example.spi.DictionaryServiceProvider</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.poolborges.example</groupId>
            <artifactId>com.poolborges.example.spi.GeneralDictionary</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.poolborges.example</groupId>
            <artifactId>com.poolborges.example.spi.ExtendedDictionary</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <configuration>
                    <mainClass>com.poolborges.example.dictionary.demo.DictionaryDemo</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
